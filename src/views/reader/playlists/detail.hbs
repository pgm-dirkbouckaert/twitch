{{> modal}}

<div class="row">
  <div class="col-8">
    <h1>{{playlist.name}}</h1>
    <h5>By <a href="/teachers/{{playlist.user.id}}">{{playlist.user.usermeta.firstname}} {{playlist.user.usermeta.lastname}}</a></h5>
  </div>
  <div class="col-4 d-flex flex-row justify-content-end align-items-center">
    <a href="/teachers/{{playlist.user.id}}">
      <img loading="lazy"
          {{#if (contains playlist.user.usermeta.avatar "ui-avatars" )}} src="{{playlist.user.usermeta.avatar}}"
          {{else}} src="/images/avatars/{{playlist.user.usermeta.avatar}}"
          {{/if}}
          title="{{playlist.user.usermeta.firstname}} {{playlist.user.usermeta.lastname}}"
          class="card-img-top card-img-playlist rounded-circle" alt="teacher">
    </a>
  </div>
</div>

{{#ifEq playlist.videos.length 0}}

  <div class="mt-5 text-primary text-center fs-3">Sorry, this playlist doesn't contain any videos.</div>

{{else}}

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 gx-2 gy-4 mt-2 mb-5">
    {{#each playlist.videos}}
      {{> card-video}}
    {{/each}}
  </div>

{{/ifEq}}

<script src="/js/watch-video.js"></script>