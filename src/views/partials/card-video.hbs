<div class="col d-flex justify-content-center">
  <div class="card card-video h-100 position-relative">
    <a href="" class="watch-video d-flex justify-content-center"
       data-youtube-id="{{youtube_id}}" data-title="{{name}}"
       data-teacher="{{user.usermeta.firstname}} {{user.usermeta.lastname}}"
       data-teacher-id="{{user.id}}">
      <img src="{{thumbnail}}" loading="lazy" class="card-img-top" alt="video thumbnail">
    </a>
    <div class="card-body">
      <a href="" class="watch-video"
         data-youtube-id="{{youtube_id}}" data-title="{{name}}"
         data-teacher="{{user.usermeta.firstname}} {{user.usermeta.lastname}}">
        <h5 class="card-title">{{name}}</h5>
      </a>
      {{#if (contains @root.videostarIds id) }}
      <a href="/stars/deleteVideo/{{id}}">
        <i class="fa-solid fa-star color-primary fs-5 bg-white 
                    hover position-absolute top-0 end-0 mt-1 me-1 p-1 rounded"
           title="Unstar">
        </i>
      </a>
      {{else}}
      <a href="/stars/addVideo/{{id}}">
        <i class="fa-regular fa-star text-secondary fs-6 bg-secondary-subtle  
                    hover position-absolute top-0 end-0 mt-1 me-1 p-1 rounded"
           title="Give star">
        </i>
      </a>
      {{/if}}
    </div>
    <div class="card-footer">
      <small>By <a href="/teachers/{{user.id}}">{{user.usermeta.firstname}} {{user.usermeta.lastname}}</a></small>
      <span class="badge rounded-pill text-bg-primary float-end">{{topic.name}}</span>
    </div>
  </div>
</div>